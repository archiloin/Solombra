{% extends 'index.html.twig' %}

{% block title %}Créer un sujet{% endblock %}

{# Css/Js Loading #}
{% set coreCss = 1 %}
{% set heroCss = 1 %}
{% set bootstrapCss = 1 %}

{% block card %}
    <div class="main-panel">
        <h2 class="text-center my-4">Créer un nouveau sujet</h2>

        {{ form_start(form, { 'attr': { 'class': 'needs-validation', 'novalidate': 'novalidate' } }) }}
        
            <div class="mb-3">
                {{ form_label(form.name, null, { 'label_attr': { 'class': 'form-label' } }) }}
                {{ form_widget(form.name, { 'attr': { 'class': 'form-control', 'placeholder': 'Nom du sujet' } }) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.description, null, { 'label_attr': { 'class': 'form-label' } }) }}
                {{ form_widget(form.description, { 'attr': { 'class': 'form-control', 'rows': 4, 'placeholder': 'Description du sujet' } }) }}
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <button type="submit" class="btn btn-mystic">Créer</button>
            </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
