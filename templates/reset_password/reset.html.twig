{% extends 'base.html.twig' %}

{% block title %}Réinitialisation de votre mot de passe{% endblock %}

{# Css/Js Loading #}
{% set coreCss = 1%}
{% set cardCss = 1%}
{% set bootstrapCss = 1%}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="card card-custom">
                    <div class="card-body">
                        <h2 class="card-title">Réinitialisation de votre mot de passe</h2>

                        {{ form_start(resetForm, {'attr': {'class': 'form-custom'}}) }}
                            <div class="mb-3">
                                {{ form_row(resetForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Nouveau mot de passe'}}) }}
                            </div>

                            <div class="d-grid">
                                <button class="btn btn-mystic btn-block">Réinitialiser le mot de passe</button>
                            </div>
                        {{ form_end(resetForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
