{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{# Css/Js Loading #}
{% set coreCss = 1%}
{% set cardCss = 1%}
{% set bootstrapCss = 1%}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-4">
                <div class="card card-custom">
                    {#<img src="{{ asset('img/login.webp') }}" class="card-img-top" alt="Connexion" height="240">#}
                    <div class="card-body">
                        <h5 class="card-title text-center">Connexion</h5>
                        <form method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            
                            <div class="mb-3">
                                <label for="inputEmail" class="form-label">Email</label>
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                            </div>

                            <div class="mb-3">
                                <label for="inputPassword" class="form-label">Mot de passe</label>
                                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                            </div>

                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >
                            
                            <div class="d-grid">
                                <button type="submit" class="btn btn-mystic btn-block">Se connecter</button>
                            </div>
                            <p class="mt-3 text-center">
                                <a href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√© ?</a>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
