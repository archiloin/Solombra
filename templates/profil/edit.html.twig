{% extends 'base.html.twig' %}

{% block title %}Modifier le profil{% endblock %}

{% block body %}

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-4">
                <div class="card card-custom">
                    <div class="card-body">
                        <h4 class="card-title">Modifier le profil</h4>

                        {{ form_start(form, {'attr': {'class': 'form-custom'}}) }}
                        <div class="mb-3">
                            {{ form_label(form.email, 'Adresse mail') }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-custom btn-block">Enregistrer les modifications</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
