{% extends 'index.html.twig' %}

{% block title %}Centre de recherche{% endblock %}

{# Css/Js Loading #}
{% set coreCss = 1%}
{% set heroCss = 1%}
{% set bootstrapCss = 1%}
{% set bootstrapJs = 1%}
{% set modalCss = 1%}

{% block card %}
<div class="main-panel">
    <div class="map-container" style="position: relative;">
        <!-- Image Map Generated by http://www.image-map.net/ -->
        <img class="image-map" src="{{ asset('images/maps/research.webp') }}" usemap="#image-map">
        <svg id="svg-overlay" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; pointer-events: none;"></svg>
        <map name="image-map">
            {% for map in maps %}
            <area target="" alt="{{ map.name }}" title="{{ map.name }}" data-bs-toggle="modal" data-bs-target="#modalMap-{{ map.id }}" href="" coords="{{ map.coord }}" shape="poly" data-original-coords="{{ map.coord }}">
            <div class="modal fade" id="modalMap-{{ map.id }}" tabindex="-1" role="dialog" aria-labelledby="modalMapLabel-{{ map.id }}" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modalMapLabel-{{ map.id }}">La {{ map.name }} est au niveau </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <a type="button" class="btn btn-mystic" href="{{ path('app_knowledge', {'force': map.name}) }}">Augmenter le niveau</a>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </map>
    </div>
</div>

<script src="{{ asset('js/selectMap.js') }}"></script>
<script src="{{ asset('js/resizeMap.js') }}"></script>
{% endblock %}