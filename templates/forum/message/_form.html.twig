{{ form_start(form, { 'attr': { 'class': 'needs-validation', 'novalidate': 'novalidate' } }) }}

    <div class="mb-3">
        {{ form_label(form.content, 'Contenu', { 'label_attr': { 'class': 'form-label' } }) }}
        {{ form_widget(form.content, { 'attr': { 'class': 'form-control', 'rows': 6 } }) }}
        <div class="invalid-feedback">
            {{ form_errors(form.content) }}
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center">
        <button type="submit" class="btn btn-mystic"><i class="bi bi-check-circle"></i> Enregistrer</button>
        <a href="{{ path('app_forum_post', { id: message.post.id }) }}" class="btn btn-outline-secondary">Annuler</a>
    </div>

{{ form_end(form) }}