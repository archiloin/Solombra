{% extends 'index.html.twig' %}

{% block title %}Salle de jeux{% endblock %}

{# Css/Js Loading #}
{% set coreCss = 1%}
{% set heroCss = 1%}
{% set bootstrapCss = 1%}

{% block card %}
    <div class="main-panel">
        <div class="games-container">
            <h1 class="text-center mb-4">Bienvenue dans la salle de jeux de Solombra</h1>
            <p class="text-center">Explorez les mini-jeux et relevez des défis pour débloquer des récompenses !</p>
            <div class="game-grid">
                {% for game in games %}
                    <div class="game-card">
                        <img src="{{ asset(game.image) }}" alt="{{ game.name }}" class="game-image">
                        <h2>{{ game.name }}</h2>
                        <p>{{ game.description }}</p>
                        <a href="{{ path(game.route) }}" class="btn btn-mystic">Jouer</a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

<style>
    .games-container {
        padding: 20px;
        background: #1E1E2E;
        color: #E8E6F1;
    }

    .game-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .game-card {
        background: #2A2A3D;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(128, 0, 255, 0.5);
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .game-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0 20px rgba(128, 0, 255, 0.8);
    }

    .game-image {
        width: 100%;
        height: auto;
        border-radius: 10px;
    }

    .btn-mystic {
        margin-top: 10px;
        background: linear-gradient(135deg, #6D3DBE, #B07DFF);
        border: none;
        color: #21065e !important;
        font-size: 1em;
        padding: 10px 20px;
        text-transform: uppercase;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .btn-mystic:hover {
        transform: scale(1.1);
        box-shadow: 0 0 20px rgba(128, 0, 255, 0.7);
    }
</style>
{% endblock %}
